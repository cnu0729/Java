package com.kh.test.main;

import java.util.Scanner;

public class Test6 {
	public static void main(String[] args) {
		/*
		키보드로 1개의 정수형(int)
		데이터를 입력받아 1부터 5까지 일때만 해당 숫자에 해당하는 결과를 출력한다.
		단, switch문을 이용한다.
		*/
		
		Scanner sc = new Scanner(System.in);
		System.out.print("정수 입력 : ");
		int num = sc.nextInt();
		String 결과 = "";
		
		switch(num) {
		case 1:
			결과 = "1 : ** 입력이 정상적으로 되었습니다! **";
			break;
		case 2:
			결과 = "2 : ** 조회가 시작되었습니다! **";
			break;
		case 3:
			결과 = "3 : ** 수정이 정상적으로 되었습니다! **";
			break;
		case 4:
			결과 = "4 : ** 삭제가 정상적으로 되었습니다! **";
			break;
		case 5:
			결과 = "5 : ** 정상적으로 종료 되었습니다! **";
			return;
		default:
			System.out.println("1~5까지의 값을 입력해주세요.");
		}
		System.out.println(결과);
	}
	
}
